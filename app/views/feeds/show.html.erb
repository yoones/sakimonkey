<p id="notice"><%= notice %></p>

<center><h2><%= link_to @feed.title, @feed.url %></h2></center>
<center>
<div>
<hr />
  <p>
    <b>Cached entries:</b>
    <%= @feed.entries.count.to_s %>
  </p>

  <fieldset>
    <%= search_form_for @search do |f| %>
    <div class="input-append">
      <%= f.text_field :content_cont, class: "input-xxlarge", placeholder: "search this feed's entries" %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    </div>
    <% end %>
  </fieldset>
  <%= paginate @entries %>
<hr />
</div>
</center>
<% @entries.each do |e| %>
<div>
  <h4><%= link_to e.title, e.url %></h4>
  <p class="muted">Published: <%= e.published.strftime("%d/%m/%Y") %></p>
  <p><%=raw e.summary %></p>
</div>
<hr />
<% end %>

<center>
<%= paginate @entries %>
</center>

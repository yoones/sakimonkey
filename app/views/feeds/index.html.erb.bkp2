<% @_categories.each do |c| %>
<% if c.feeds.count > 0 %>
<%= render partial: "category_feeds", :locals => { category_name: c.name, category_feeds: c.feeds } %>
<% end %>
<% end %>
<%= render partial: "no_category_feeds", :locals => { feeds: @_feeds } %>

<hr />

<h3>Add a new feed</h3>

<% unless notice.nil? %>
<div class="alert">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Warning!</strong> <%= notice %>
</div>
<% end %>

<%= render 'form' %>

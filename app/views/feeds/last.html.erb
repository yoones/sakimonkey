<p id="notice"><%= notice %></p>

<center><h2><%= "Last #{@entries.count.to_s} entries" %></h2></center>
<hr />

<% @entries.each do |e| %>
<div class="entry">
  <div class="entry_header">
    <span><b>Source:</b> <%= link_to e.feed.title[0..17] + "...", e.feed.feed_url %></span> | 
    <% unless e.author.nil? %><span><b>Author:</b> <%= e.author %></span> | <% end %>
    <span><b>Published:</b> <%= e.published.strftime("%d/%m/%Y") %></span>
  </div>
  <div class="entry_body">
    <h4><%= link_to e.title, e.url %></h4>
    <p>
      <%=raw e.content %>
      <%=raw e.summary if e.content.nil? %>
    </p>
  </div>
</div>
<hr />
<% end %>
